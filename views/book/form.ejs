<form method="POST" class="mt-5" enctype='multipart/form-data'>
  <div class="form-group row">
    <label for="inputTitle" class="col-sm-3 col-form-label">Заголовок</label>
    <div class="col-sm-9">
      <input type="text" value="<%= book.title %>" name="title" class="form-control" id="inputTitle">
    </div>
  </div>

  <div class="form-group row">
    <label for="inputAuthors" class="col-sm-3 col-form-label">Автор</label>
    <div class="col-sm-9">
      <input type="text" value="<%= book.authors %>" name="authors" class="form-control" id="inputAuthors">
    </div>
  </div>

  <div class="form-group row">
    <label for="inputDesc" class="col-sm-3 col-form-label">Описание</label>
    <div class="col-sm-9">
      <textarea rows="3" name="description" class="form-control" id="inputDesc"><%= book.description %></textarea>
    </div>
  </div>

  <div class="form-group row">
    <label for="inputFileBook" class="col-sm-3 col-form-label">Файл книги</label>
    <div class="col-sm-9">
      <input type="file" value="<%= book.fileBook %>" name="fileBook" class="form-control-file" id="inputFileBook">
    </div>
  </div>

  <div class="form-group row">
    <label for="inputFileCover" class="col-sm-3 col-form-label">Обложка книги</label>
    <div class="col-sm-9">
      <input type="file" value="<%= book.fileCover %>" name="fileCover" class="form-control-file" id="inputFileCover">
    </div>
  </div>

  <div class="form-group text-right ">
    <button type="submit" class="btn btn-primary">Сохранить</button>
  </div>
</form>